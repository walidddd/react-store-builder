{
  "sections": {
    "breadcrumbs": {
      "type": "breadcrumbs"
    },
    "main": {
      "type": "main-product",
      "blocks": {
        "title": {
          "type": "title",
          "settings": {
            "image_overlay_shadow_opacity": 45,
            "font_col_base": "#3333",
            "font_col_heads": "#023",
            "font_col_shoptitle": "#000",
            "font_col_sale": "#000",
            "btn_col": "#54541",
            "btn_col_txt": "#5454",
            "btn_alt_bg": "#000",
            "font_col_link": "#4888",
            "btn_alt_txt": "#144",
            "bg_image": "#444",
            "bg_method": "centertop-repeatx"
          }
        },
        "price": {
          "type": "price",
          "settings": {
            "show_tax_and_shipping": false,
            "enable_product_reviews_by_price": true
          }
        },
        "vendor": { "type": "vendor", "settings": {} },
        "divider": {
          "type": "divider",
          "settings": { "show_in_quickbuy": false }
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "show_single": false,
            "select_first_variant": true,
            "variant_style": "listed",
            "disable_unavailable_variants": true,
            "show_size_chart": false,
            "size_chart_variant": "Size",
            "size_chart_page": ""
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_quantity_selector": true,
            "enable_payment_button": true,
            "show_backorder_text": true,
            "show_pickup_availability": true
          }
        },
        "description": {
          "type": "description",
          "settings": {
            "show_in_tab": false,
            "open_tab": false,
            "icon": "",
            "show_in_quickbuy": false
          }
        }
      },
      "block_order": [
        "title",
        "price",
        "vendor",
        "divider",
        "variant_picker",
        "buy_buttons",
        "description"
      ],
      "settings": {
        "show_breadcrumbs": true,
        "show_location_underneath": false,
        "inventory_transfers_enable": true,
        "enable_sticky_columns": false,
        "gallery_size": "medium",
        "gallery_layout": "carousel-under",
        "enable_zoom": true,
        "enable_video_looping": false,
        "enable_var_img_grouping": false,
        "var_img_grouping_option": "Color,Colour,Couleur,Farbe",
        "box_color": "#235465",
        "slider_width": "35"
      }
    },
    "recommendations": {
      "type": "product-recommendations",
      "blocks": {
        "title": { "type": "title", "settings": {} }
      },
      "block_order": ["title"],
      "settings": {
        "title": "You may also like",
        "show_vendor": false,
        "grid": 5
      }
    },
    "Reviews": {
      "type": "Reviews"
    }
  },
  "order": ["breadcrumbs", "main", "recommendations", "Reviews"]
}
