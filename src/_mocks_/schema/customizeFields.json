        },
        {
          "value": "collage-2",
          "label": "Collage - style 2"
        }
      ],
      "default": "carousel-under"
    },
    {
      "type": "range",
      "id": "slider_width",
      "min": 60,
      "max": 700,
      "step": 10,
      "unit": "px",
      "label": "slider_width",
      "default": 700
