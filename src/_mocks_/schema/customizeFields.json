  "settings": [
    {
      "type": "color",
      "id": "box_color",
      "label": "Box color",
      "info": "Suggestions: Blue #e5f3ff, Teal #e0f5f5, Green #e0f4d5, Yellow #fcf1cd, Red #fbeae5",
      "default": "#e0f4d5"
    },
    {
      "type": "color",
      "id": "box_color2",
      "label": "Background color",
      "info": "Suggestions: Blue #e5f3ff, Teal #e0f5f5, Green #e0f4d5, Yellow #fcf1cd, Red #fbeae5",
      "default": "#e0f4d5"
    },
    {
